.counter
    float left
    text-align center

    .total
        display inline-block

    .entry
        $entrySize = 64px
        $betweenBorderSize = 5px

        float left
        width $entrySize
        height $entrySize
        text-align center

        .big-value
            font-size 15px
            .suffix
                font-size 10px
        
        .small-value
            font-size 10px
            .suffix
                font-size 8px

        .border
            border 1px solid #333
            box-sizing border-box
            border-radius 5px
            float left
            width $entrySize - $betweenBorderSize
            height $entrySize - $betweenBorderSize

        &:last-child
            &::after
                border none

        &::after
            content ""
            width $betweenBorderSize
            margin-top (($entrySize - $betweenBorderSize) / 2)px
            height 0
            float left
            box-sizing border-box
            border-top 1px solid #000